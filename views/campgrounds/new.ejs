<% layout("/layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center">New campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> 
            <div class="mb-3"  >
                <label class="form-label" for="title">title
                </label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
            </div>
            <div  class="mb-3" >
                <label class="form-label" for="location">location
                </label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
            </div>
            <input type="file" name="image" id="" multiple>
            <!-- <div  class="mb-3" >
                <label class="form-label" for="image">Image URL
                </label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
            </div> -->
            <br>    
            <label class="form-label" for="price">campground price </label>


            <div class="mb-3">            <div class="input-group ">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" name="campground[price]" aria-describedby="price-label" required>
              </div>
            </div>


            <div  class="mb-3" >
                <label class="form-label" for="discription">Discription
                </label>
                <textarea class="form-control" type="text" id="discription" name="campground[discription]" required></textarea>
            </div>

        <div class="mb-3">
            <button class="btn btn-success">add campground</button>

        </div>
        
        
            <footer><a href="/campgrounds">all campgrounds</a></footer>
            </form>
        
    </div>
</div>
  

